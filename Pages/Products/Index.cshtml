@page
@using ExampleApplication.Helpers
@model ExampleApplication.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Список товаров";
}
@{
    <div class="mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-box-seam"></i> Товары</h2>
            <a href="/Products/Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Добавить товар</a>
        </div>

        @if (!string.IsNullOrEmpty(TempData["Response"] as string))
        {
            <div class="alert alert-@((TempData["ResponseType"] as string) ?? "info") alert-dismissible fade show mb-4">
                @TempData["Response"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <form method="get" class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label class="form-label fw-bold mb-2"><i class="bi bi-search"></i> Поиск по названию</label>
                        <input type="text" class="form-control" placeholder="Введите название..." value="@Model.SearchText" name="searchText">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold mb-2"><i class="bi bi-sort"></i> Сортировка</label>
                        <div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="price" id="sortPrice">
                                <label class="form-check-label" for="sortPrice">По цене</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="income" id="sortIncome">
                                <label class="form-check-label" for="sortIncome">По доходу</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-check-circle"></i> Применить
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-list-ul"></i> Список товаров</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Наименование</th>
                            <th scope="col">Код</th>
                            <th scope="col">Цена</th>
                            <th scope="col">Количество</th>
                            <th scope="col">Доход</th>
                            <th scope="col">НДС</th>
                            <th scope="col">Прибыль</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.localProducts)
                        {
                            var nds = 20;

                            var profit = product.Income - (product.Income / 100 * nds);
                            <tr> 
                                <th scope="row">@product.Id</th>
                                <td>@product.Name</td>
                                <td>@product.Code</td>
                                <td>@product.Price ₽</td>
                                <td>@product.Quantity</td>
                                <td>@product.Income ₽</td>
                                <td>@nds %</td>
                                <td>@profit ₽</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/Products/Edit?Id=@product.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Изменить
                                        </a>
                                        <a href="/Products/Delete?Id=@product.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Удалить
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
