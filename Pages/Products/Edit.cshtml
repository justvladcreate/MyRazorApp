@page
@model ExampleApplication.Pages.Products.EditModel
@{
    ViewData["Title"] = "Редактирование товара";
}
@{
    <div class="mt-4">
        <div class="d-flex align-items-center mb-4">
            <a href="/Products/Index" class="btn btn-outline-secondary me-3"><i class="bi bi-arrow-left"></i></a>
            <h2 class="mb-0"><i class="bi bi-pencil-square"></i> Редактирование товара</h2>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-box-seam"></i> Информация о товаре</h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(TempData["Response"] as string))
                        {
                            <div class="alert alert-@((TempData["ResponseType"] as string) ?? "info") alert-dismissible fade show">
                                @TempData["Response"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        <form method="post">
                            <input asp-for="MyProduct.Id" type="hidden" />
                            <div class="mb-3">
                                <label for="input1" class="form-label fw-bold"><i class="bi bi-tag"></i> Название товара</label>
                                <input asp-for="MyProduct.Name" id="input1" placeholder="Название товара" type="text" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label for="input2" class="form-label fw-bold"><i class="bi bi-upc"></i> Код товара</label>
                                <input asp-for="MyProduct.Code" id="input2" placeholder="Код товара" type="text" class="form-control" required />
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="input3" class="form-label fw-bold"><i class="bi bi-currency-dollar"></i> Цена</label>
                                    <input asp-for="MyProduct.Price" id="input3" placeholder="Цена" type="number" class="form-control" min="0" required />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="input4" class="form-label fw-bold"><i class="bi bi-cart"></i> Количество</label>
                                    <input asp-for="MyProduct.Quantity" id="input4" placeholder="Количество" type="number" class="form-control" min="0" required />
                                </div>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-end gap-2">
                                <a href="/Products/Index" class="btn btn-secondary">
                                    <i class="bi bi-x-circle"></i> Отмена
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> Сохранить изменения
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
